<acsconfig xmlns="http://openncip.org/acs-config/1.0/">

  <error-detect enabled="true" />

  <!-- Set Net::Server::PreFork runtime parameters -->
  <server-params
           min_servers='1'
           min_spare_servers='0' />
  
  
  <listeners>
    <service
      port="0:8080/tcp"
      transport="http"
      protocol="NCIP/1.0" />

    <service
      port="8023/tcp"
      transport="telnet"
      protocol="SIP/1.00"
      timeout="60" />

    <service
      port="127.0.0.1:6001/tcp"
      transport="RAW" 
      protocol="SIP/2.00"
      timeout="60" />
  </listeners>

  <accounts>
      <login id="SITE1"  password="SITE1"  institution="SITE1" />
      <login id="SITE2"  password="SITE2"  institution="SITE2" />
      <login id="SITE3"  password="SITE3"  institution="SITE3" />
      <login id="SITE4"  password="SITE4"  institution="SITE4" />
      <login id="SITE5"  password="SITE5"  institution="SITE5" />
  </accounts>

<!-- Institution tags will hold stuff used to interface to -->
<!-- the rest of the ILS: authentication parameters, etc.  I -->
<!-- don't know what yet, so it'll just be blank.  But there -->
<!-- needs to be one institution stanza for each institution -->
<!-- named in the accounts above. -->
<institutions>
    <institution id="SITE1" implementation="KAPA::Postgres">
        <policy retries="3" timeout="60" />
        <config server="localhost" db_username="postgres"
            db_password="password" database="barcodes" />
    </institution>
    <institution id="SITE2" implementation="KAPA::PatternMatch">
        <policy retries="3" timeout="60" />
        <config pattern="SITE2[0-9]{6}|21111[0-9]{9}" />
    </institution>
    <institution id="SITE3" implementation="KAPA::EZProxy">
        <policy retries="3" timeout="60" />
        <config server="http://example.com" proxy_login="http://proxy.example.com/login" proxy_url="http://proxy.example.com/mygroups/" />
    </institution>
    <institution id="SITE4" implementation="KAPA::FreeTDS">
        <policy retries="3" timeout="60" />
        <config server="SITE4" db_username="freetds_user"
            db_password="password" database="freetds_db" />
    <institution id="SITE5" implementation="KAPA::SurreyAPI">
        <policy retries="3" timeout="60" />
        <config server="https://libraries.surrey.ca/cards" />
    </institution> 
</institutions>
</acsconfig>
